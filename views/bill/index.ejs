<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Bill Records</h2>
    <a href="/bill/create" class="btn btn-primary">
      <i class="bi bi-plus-lg"></i> Add New Bill
    </a>
  </div>
<div class="container mt-4">

  <h3 class="mb-4">All Bills</h3>

  <% if (bills.length === 0) { %>
    <div class="alert alert-info text-center">No bills found.</div>
  <% } else { %>
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th>ID</th>
          <th>Ledger Name</th>
          <th>Date</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% bills.forEach(bill => { %>
          <tr>
            <td><%= bill.id %></td>
            <td><%= bill.ledger.customerName %></td>
            <td><%= bill.date %></td>
            <td>
          <a href="/bill/show/<%= bill.id %>" class="btn btn-info btn-sm">Show</a>            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>
</div>
