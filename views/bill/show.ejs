<div class="container mt-4">
  <h3 class="text-center mb-4">Bill Details</h3>

  <!-- Bill Info -->
  <div class="card shadow-sm mb-4">
    <div class="card-body">
      <div class="row g-3">
        <div class="col-md-4">
          <label class="form-label">Bill Date</label>
          <input type="date" class="form-control" value="<%= bill.date %>" disabled>
        </div>
        <div class="col-md-8">
          <label class="form-label">Ledger / Customer</label>
          <input type="text" class="form-control" value="<%= bill.ledger.customerName %>" disabled>
        </div>
      </div>
    </div>
  </div>

  <!-- Items Table -->
  <div class="card shadow-sm">
    <div class="card-body">
      <h5>Bill Items</h5>
      <table class="table table-bordered table-hover text-center">
        <thead class="table-light">
          <tr>
            <th>Item</th>
            <th>Type</th>
            <th>Size</th>
            <th>Qty</th>
            <th>Bundle</th>
            <th>Price</th>
            <th>Total</th>
          </tr>
        </thead>
        <tbody>
          <% bill.items.forEach(item => { %>
            <tr>
              <td><%= item.item %></td>
              <td><%= item.type %></td>
              <td><%= item.size %></td>
              <td><%= item.quantity %></td>
              <td><%= item.bundle %></td>
              <td><%= item.price.toFixed(2) %></td>
              <td><%= (item.quantity * item.price).toFixed(2) %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="mt-3 text-end">
    <a href="/bill" class="btn btn-outline-secondary">Back to Bills</a>
  </div>
</div>