<div class="container mt-4">
  <div class="card shadow-lg border-0 rounded-4">
    <div class="card-header bg-gradient text-white rounded-top-4" style="background: linear-gradient(45deg, #4cafef, #0077b6);">
      <h4 class="mb-0"><i class="bi bi-pencil-square"></i> Edit Ledger Entry</h4>
    </div>
    <div class="card-body p-4">
      <form action="/ledger/<%= ledger.id %>/edit" method="POST">
        
        <div class="mb-3">
          <label for="customerName" class="form-label fw-bold">Customer Name</label>
          <input type="text" id="customerName" name="customerName" 
                 class="form-control" value="<%= ledger.customerName %>" required>
        </div>

        <div class="mb-3">
          <label for="phone" class="form-label fw-bold">Phone</label>
          <input type="text" id="phone" name="phone" 
                 class="form-control" value="<%= ledger.phone %>" required>
        </div>

        <div class="mb-3">
          <label for="address" class="form-label fw-bold">Address</label>
          <textarea id="address" name="address" class="form-control" required><%= ledger.address %></textarea>
        </div>

        <div class="d-flex justify-content-between">
          <button type="submit" class="btn btn-primary px-4">
            <i class="bi bi-save"></i> Update
          </button>
          <a href="/ledger/index" class="btn btn-secondary px-4">
            <i class="bi bi-arrow-left"></i> Cancel
          </a>
        </div>

      </form>
    </div>
  </div>
</div>
