<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Stock List</h2>
    <a href="/stock/create" class="btn btn-success">
      <i class="bi bi-plus-lg"></i> Add Stock
    </a>
  </div>

  <table class="table table-striped table-hover shadow-sm">
    <thead class="table-dark">
      <tr>
        <th>#</th>
        <th>Item Name</th>
        <th>Item Type</th>
        <th>Thickness</th>
        <th>weight(KG)</th>
        <th>Created At</th>
        <th>Actions</th>

      </tr>
    </thead>
    <tbody>
      <% if (stocks.length > 0) { %>
        <% stocks.forEach((stock, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= stock.itemName %></td>
            <td><%= stock.itemType %></td>
            <td><%= stock.thickness || '-' %></td>
            <td><%= stock.quantity %></td>
            <td><%= stock.createdAt ? stock.createdAt.toDateString() : '-' %></td>
              <td class="text-center">
                    <a href="/stock/<%= stock.id %>/show" class="btn btn-sm btn-info text-white me-1">
                      <i class="bi bi-eye"></i>
                    </a>
                    <a href="/stock/<%= stock.id %>/edit" class="btn btn-sm btn-warning text-white me-1">
                      <i class="bi bi-pencil-square"></i>
                    </a>
                    <form action="/stock/<%= stock.id %>/delete?_method=DELETE" method="POST" style="display:inline;">
                      <button class="btn btn-sm btn-danger" type="submit" onclick="return confirm('Delete this record?')">
                        <i class="bi bi-trash"></i>
                      </button>
                    </form>
                  </td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="6" class="text-center text-muted">No stock items found</td>
        </tr>
      <% } %>
      
    </tbody>
  </table>
</div>
