<div class="container mt-5">
  <div class="card shadow-lg border-0">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
      <h4 class="mb-0">Ledger List</h4>
      <a href="/ledger/create" class="btn btn-light btn-sm">
        <i class="bi bi-plus-circle"></i> Add Ledger
      </a>
    </div>
    <div class="card-body bg-light">
      <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle mb-0">
          <thead class="table-primary text-center">
            <tr>
              <th>ID</th>
              <th>Customer Name</th>
              <th>Phone</th>
              <th>Address</th>
              <th style="width: 180px;">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (ledgers.length > 0) { %>
              <% ledgers.forEach(ledger => { %>
                <tr>
                  <td class="text-center"><%= ledger.id %></td>
                  <td><strong><%= ledger.customerName %></strong></td>
                  <td><%= ledger.phone %></td>
                  <td><%= ledger.address %></td>
                  <td class="text-center">
                    <a href="/ledger/<%= ledger.id %>/show" class="btn btn-sm btn-info text-white me-1">
                      <i class="bi bi-eye"></i>
                    </a>
                    <a href="/ledger/<%= ledger.id %>/edit" class="btn btn-sm btn-warning text-white me-1">
                      <i class="bi bi-pencil-square"></i>
                    </a>
                    <form action="/ledger/<%= ledger.id %>/delete?_method=DELETE" method="POST" style="display:inline;">
                      <button class="btn btn-sm btn-danger" type="submit" onclick="return confirm('Delete this record?')">
                        <i class="bi bi-trash"></i>
                      </button>
                    </form>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="5" class="text-center text-muted">No records found</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
